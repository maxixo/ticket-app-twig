<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Ticket - TicketFlow</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50">

  <!-- Navbar -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-blue-600">TicketFlow</h1>
      <div class="flex gap-4">
        <a href="/dashboard" class="text-gray-600 hover:text-gray-800">Dashboard</a>
        <a href="/auth/logout" class="text-red-600 hover:text-red-700 font-semibold">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-3xl mx-auto bg-white mt-10 p-8 rounded-xl shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Create a New Ticket</h2>

    <form id="ticketForm" method="POST" action="/tickets/create" class="space-y-6">
      <!-- Title -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
        <input name="title" id="title" type="text" required
          value="{{ old.title|default('') }}"
          class="w-full px-4 py-2 border {% if errors.title %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:ring-2 focus:ring-blue-500" />
        {% if errors.title %}
          <p class="text-red-500 text-sm mt-1">{{ errors.title }}</p>
        {% endif %}
      </div>

      <!-- Description -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Description *</label>
        <textarea name="description" id="description" required rows="4"
          class="w-full px-4 py-2 border {% if errors.description %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:ring-2 focus:ring-blue-500">{{ old.description|default('') }}</textarea>
        {% if errors.description %}
          <p class="text-red-500 text-sm mt-1">{{ errors.description }}</p>
        {% endif %}
      </div>

      <!-- Status & Priority -->
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Status *</label>
          <select name="status" id="status" required
            class="w-full px-4 py-2 border {% if errors.status %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="">Select</option>
            <option value="open" {% if old.status == 'open' %}selected{% endif %}>Open</option>
            <option value="in_progress" {% if old.status == 'in_progress' %}selected{% endif %}>In Progress</option>
            <option value="closed" {% if old.status == 'closed' %}selected{% endif %}>Closed</option>
          </select>
          {% if errors.status %}
            <p class="text-red-500 text-sm mt-1">{{ errors.status }}</p>
          {% endif %}
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Priority *</label>
          <select name="priority" id="priority" required
            class="w-full px-4 py-2 border {% if errors.priority %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="">Select</option>
            <option value="low" {% if old.priority == 'low' %}selected{% endif %}>Low</option>
            <option value="medium" {% if old.priority == 'medium' or not old.priority %}selected{% endif %}>Medium</option>
            <option value="high" {% if old.priority == 'high' %}selected{% endif %}>High</option>
          </select>
          {% if errors.priority %}
            <p class="text-red-500 text-sm mt-1">{{ errors.priority }}</p>
          {% endif %}
        </div>
      </div>

      <!-- Buttons -->
      <div class="flex justify-end gap-4 mt-6">
        <a href="/tickets"
          class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg font-semibold hover:bg-gray-400 transition">
          Cancel
        </a>
        <button type="submit"
          class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
          Save Ticket
        </button>
      </div>
    </form>
  </div>

  <!-- Client-side validation -->
  <script>
    document.getElementById('ticketForm').addEventListener('submit', function (e) {
      const title = document.getElementById('title').value.trim();
      const description = document.getElementById('description').value.trim();

      if (title.split(/\s+/).length < 3) {
        e.preventDefault();
        alert('Title must contain at least 3 words.');
        return;
      }
      if (description.split(/\s+/).length < 3) {
        e.preventDefault();
        alert('Description must contain at least 3 words.');
        return;
      }
    });
  </script>
</body>
</html>
